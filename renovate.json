{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "packagePatterns": ["^eslint", "@typescript-eslint", "prettier"],
      "groupName": "Linting & Formatting"
    },
    {
      "packagePatterns": ["typescript", "@types"],
      "groupName": "TypeScript"
    },
    {
      "packagePatterns": ["gatsby"],
      "groupName": "gatsby"
    },
    {
      "packagePatterns": ["@mdx-js"],
      "groupName": "@mdx-js"
    },
    {
      "packageNames": ["react", "react-dom"],
      "groupName": "react"
    }
  ],
  "labels": ["renovate"],
  "prHourlyLimit": 4,
  "prConcurrentLimit": 15,
  "rangeStrategy": "bump",
  "bumpVersion": null,
  "semanticCommits": true,
  "schedule": "before 8am on Monday"
}
