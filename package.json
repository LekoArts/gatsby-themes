{
  "private": true,
  "name": "@lekoarts/gatsby-themes",
  "description": "My open-source collection of Gatsby themes",
  "author": "LekoArts <hello@lekoarts.de>",
  "workspaces": [
    "themes/*",
    "examples/*"
  ],
  "scripts": {
    "tsc": "tsc",
    "type-check": "tsc --noEmit",
    "tsc:compile": "tsc --project cypress/tsconfig.json",
    "tsc:compile:watch": "tsc --watch --project cypress/tsconfig.json",
    "lint": "eslint . --ignore-path .gitignore --ignore-path .prettierignore --ext .ts,.tsx,.js",
    "lint:fix": "yarn lint --fix",
    "lint:ci": "yarn lint --format junit -o results/eslint/result.xml",
    "format": "prettier \"**/*.{md,mdx,json}\" --write",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:update": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --runInBand",
    "lerna": "lerna",
    "plop": "plop",
    "cy:run": "cross-env CYPRESS_baseUrl=http://localhost:9000 cypress run --browser chrome --reporter junit --reporter-options 'mochaFile=results/cypress/result.xml'",
    "cy:open": "cypress open",
    "start-server-and-test": "start-server-and-test",
    "concurrently": "concurrently"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@testing-library/cypress": "^4.2.0",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.3",
    "@types/chroma-js": "^1.4.2",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.3",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/react-helmet": "^5.0.9",
    "@types/testing-library__cypress": "^4.2.0",
    "@types/theme-ui": "^0.2.1",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "concurrently": "^4.1.2",
    "cross-env": "^5.2.1",
    "cypress": "^3.4.1",
    "eslint": "^6.3.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "gatsby-cypress": "^0.2.7",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "jest-junit": "^8.0.0",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.5",
    "plop": "^2.4.0",
    "prettier": "^1.18.2",
    "start-server-and-test": "^1.10.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.6.2"
  }
}
